{
  "manifest_version": 2,
  "name": "UPnP M-Search app",
  "description": "show UPnP M-Search result in your local network. This web app is utilizing Chrome's raw socket api :)",
  "version": "0.1",
  "minimum_chrome_version": "24",
  "app": {
    "background": {
      "scripts": [
        "javascripts/jquery-1.7.2.min.js",
        "javascripts/upnp.js",
        "javascripts/discovery.js",
        "javascripts/tv_controller.js",
        "chromexpress/buffer.js",
        "chromexpress/server.js", 
        "chromexpress/app.js",
        "main.js"
      ]
    }
  },
  "icons": {
    "16": "/images/icon_16.png",
    "128": "/images/icon_128.png"
  },
  "intents": {
    "http://webintents.org/view": [
      {
        "type": ["video/mp4"],
        "title" : "View in Local NW devices"
      }
    ],
    "chrome-extension://app2/proxyurl": [
      {
        "type": ["text/url-list"],
        "title" : "View in Local NW devices"
      }
    ]
  },
  "permissions": [
    "http://*/",
    "experimental",
    {"socket": [
      "udp-bind",
      "udp-send-to",
      "tcp-listen",
      "tcp-connect"
    ]}
  ]
}
